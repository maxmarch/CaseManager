<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/caseViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/delete_ic"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:src="@drawable/ic_baseline_delete_24px"
            android:tint="@android:color/white"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_toStartOf="@+id/delete_ic"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="@string/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/caseViewForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCard">

        <TextView
            android:id="@+id/mainCaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mainCaseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</FrameLayout>