<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDocumentItem"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@color/colorDocumentItem"
        android:elevation="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iconDocument"
                android:layout_width="70dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/nameDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:maxLength="20"
                card_view:layout_constraintLeft_toRightOf="@id/iconDocument"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dateDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="28dp"
                card_view:layout_constraintLeft_toRightOf="@id/iconDocument"
                card_view:layout_constraintTop_toBottomOf="@id/nameDocument" />

            <TextView
                android:id="@+id/sizeDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="28dp"
                card_view:layout_constraintLeft_toRightOf="@+id/dateDocument"
                card_view:layout_constraintTop_toBottomOf="@+id/nameDocument" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>